<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".QuestionFragmentBinding">

        <variable
            name="viewModel"
            type="com.ocaterinca.ocaterinca.feature.question.QuestionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/primary_margin"
        android:layout_marginTop="@dimen/question_card_vertical_margin"
        android:layout_marginEnd="@dimen/large_text_size"
        android:layout_marginBottom="@dimen/question_card_vertical_margin">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/primary_margin"
                    android:layout_marginTop="@dimen/primary_margin"
                    android:layout_marginEnd="@dimen/primary_margin"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@{viewModel.questionText}"
                    android:textSize="@dimen/large_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Some text for this question" />

                <ImageView
                    android:id="@+id/first_player_image"
                    android:layout_width="@dimen/player_avatar_size"
                    android:layout_height="@dimen/player_avatar_size"
                    app:layout_constraintBottom_toTopOf="@id/players_list"
                    app:layout_constraintEnd_toStartOf="@id/vs_text"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/question_text"
                    tools:ignore="ContentDescription"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/vs_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/primary_margin"
                    android:layout_marginEnd="@dimen/primary_margin"
                    android:text="@string/or"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/players_list"
                    app:layout_constraintEnd_toStartOf="@id/second_player_image"
                    app:layout_constraintStart_toEndOf="@id/first_player_image"
                    app:layout_constraintTop_toBottomOf="@id/question_text" />

                <ImageView
                    android:id="@+id/second_player_image"
                    android:layout_width="@dimen/player_avatar_size"
                    android:layout_height="@dimen/player_avatar_size"
                    app:layout_constraintBottom_toTopOf="@id/players_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vs_text"
                    app:layout_constraintTop_toBottomOf="@id/question_text"
                    tools:ignore="ContentDescription"
                    tools:src="@tools:sample/avatars" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/players_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>