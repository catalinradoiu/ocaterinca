<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".QuestionFragmentBinding">

        <variable
            name="viewModel"
            type="com.ocaterinca.ocaterinca.feature.question.QuestionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/primary_margin"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/restart_text"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/primary_margin"
                    android:layout_marginTop="@dimen/primary_margin"
                    android:layout_marginEnd="@dimen/primary_margin"
                    android:gravity="center"
                    android:text="@string/restart"
                    visibleGone="@{viewModel.showRestart}"
                    android:textColor="@color/action_color"
                    android:textSize="@dimen/large_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/next_text"
                    visibleGone="@{viewModel.showNext}"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/primary_margin"
                    android:layout_marginEnd="@dimen/primary_margin"
                    android:gravity="center"
                    android:text="@{viewModel.nextText}}"
                    android:textColor="@color/action_color"
                    android:textSize="@dimen/large_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="next" />

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/primary_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/primary_margin"
                    android:gravity="center"
                    android:text="@{viewModel.questionText}"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/large_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/restart_text"
                    tools:text="Some text for this question" />

                <com.ocaterinca.ocaterinca.custom.choosePlayer.ChoosePlayerView
                    choosePlayerState="@{viewModel.choosePlayerState}"
                    choosePlayerViewModel="@{viewModel.choosePlayerViewModel}"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/players_list"
                    app:layout_constraintTop_toBottomOf="@id/question_text" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/players_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/primary_margin"
                    android:clipToPadding="false"
                    android:paddingStart="@dimen/primary_margin"
                    android:paddingEnd="@dimen/primary_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>